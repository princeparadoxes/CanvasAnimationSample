<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="?actionBarSize">

    <com.example.danil.canvasanimationsample.water.views.LiquidDropTextView
        android:id="@+id/scale_top_block"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/water"
        android:gravity="center" />

    <com.example.danil.canvasanimationsample.water.views.LiquidFrameLayout
        android:id="@+id/bottom_water_portion_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/water_bottom_block_height"
        android:layout_gravity="bottom"
        android:background="@color/water"
        />

    <ImageView
        android:id="@+id/fall_view"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:src="@drawable/drop" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="@dimen/fab_margin"
        android:src="@android:drawable/ic_dialog_email" />
</FrameLayout>
